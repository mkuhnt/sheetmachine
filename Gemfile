gem 'jquery-rails'
gem 'rails', '3.2.2'
gem 'sqlite3'

# environment gems
# -~-~-~-~-~-~-~-~-~-~-~-~-~-~-~-~-~-~

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end


group :development, :test do
  gem 'ruby-debug19', :require => 'ruby-debug'
  gem 'rspec-rails', "~> 2.6"
end

group :test do
  gem 'test-unit'
  gem 'factory_girl_rails'
end

