= form_for(@sheet) do |f|
  - if @sheet.errors.any?
    #error_explanation
      %h2
        = pluralize(@sheet.errors.count, "error")
        prohibited this sheet from being saved:
      %ul
        - @sheet.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :body
    %br/
    = f.text_area :body
  .actions
    = f.submit
